<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" xsi:type="MailApp">
  <Id>12345678-1234-1234-1234-123456789012</Id>
  <Version>1.0.0.1</Version>
  <ProviderName>BiomatCEN</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Tag Processor"/>
  <Description DefaultValue="Process email tags"/>
  <IconUrl DefaultValue="https://biomatcen.github.io/outlook-tag-processor/icon-64.png"/>
  <HighResolutionIconUrl DefaultValue="https://biomatcen.github.io/outlook-tag-processor/icon-64.png"/>
  <SupportUrl DefaultValue="https://biomatcen.github.io/outlook-tag-processor/"/>
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://biomatcen.github.io/outlook-tag-processor/taskpane.html"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  <Permissions>ReadWriteMailbox</Permissions>
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="TagGroup">
                <Label resid="GroupLabel"/>
                <Icon>
                  <bt:Image size="16" resid="Icon16"/>
                  <bt:Image size="32" resid="Icon32"/>
                  <bt:Image size="80" resid="Icon80"/>
                </Icon>
                <Control xsi:type="Button" id="TagButton">
                  <Label resid="ButtonLabel"/>
                  <Supertip>
                    <Title resid="ButtonLabel"/>
                    <Description resid="ButtonDesc"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon16"/>
                    <bt:Image size="32" resid="Icon32"/>
                    <bt:Image size="80" resid="Icon80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="TaskpaneUrl"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    <Resources>
      <bt:Images>
        <bt:Image id="Icon16" DefaultValue="https://biomatcen.github.io/outlook-tag-processor/icon-16.png"/>
        <bt:Image id="Icon32" DefaultValue="https://biomatcen.github.io/outlook-tag-processor/icon-32.png"/>
        <bt:Image id="Icon80" DefaultValue="https://biomatcen.github.io/outlook-tag-processor/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="TaskpaneUrl" DefaultValue="https://biomatcen.github.io/outlook-tag-processor/taskpane.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="Tag Processor"/>
        <bt:String id="ButtonLabel" DefaultValue="Traiter tags"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="ButtonDesc" DefaultValue="Convertit les tags en categories"/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
